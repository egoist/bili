{
  "name": "bili",
  "version": "3.3.1",
  "description": "Delightful library bundler.",
  "repository": {
    "url": "git+https://github.com/egoist/bili.git",
    "type": "git"
  },
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "babel.js"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "test:cov": "npm run lint && jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier-eslint src/**/*.js --write",
    "build": "bili",
    "watch": "yarn build --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-plugin-alter-object-assign": "^1.0.1",
    "babel-plugin-transform-vue-jsx": "^4",
    "boxen": "^1.3.0",
    "bytes": "^3.0.0",
    "cac": "^4.2.4",
    "camelcase": "^4.1.0",
    "chalk": "^2.3.0",
    "fast-async": "^6.3.0",
    "find-babel-config": "^1.1.0",
    "first-commit-date": "^0.2.0",
    "fs-extra": "^5.0.0",
    "globby": "^7.1.1",
    "gzip-size": "^4.1.0",
    "is-builtin-module": "^2.0.0",
    "is-ci": "^1.1.0",
    "log-update": "^2.3.0",
    "parse-package-name": "^0.1.0",
    "resolve-from": "^4.0.0",
    "rollup": "^0.66.6",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-hashbang": "^1.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.2.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-terser": "^3.0.0",
    "string-width": "^2.1.1",
    "stringify-author": "^0.1.3",
    "text-table": "^0.2.0",
    "use-config": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "22.4.1",
    "babel-register": "6.26.0",
    "bili": "^3.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "4.15.0",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo": "0.19.0",
    "jest": "22.0.6",
    "p-all": "1.0.0",
    "p-map": "1.2.0",
    "prettier-eslint-cli": "4.7.0",
    "semantic-release": "^15.10.8"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "rem"
    ],
    "env": {
      "jest": true
    }
  },
  "eslintIgnore": [
    "dist/**"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [
    "rollup",
    "webpack",
    "bundler",
    "zero-config",
    "zero",
    "config",
    "simple",
    "fast",
    "bundle",
    "package",
    "gulp",
    "typescript",
    "babel",
    "buble",
    "css",
    "sass",
    "postcss",
    "bili",
    "poi",
    "parcel"
  ],
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
